@model EmlakYonetim.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Sil";
}

<h1>Müşteri Sil</h1>

<h3>Bu müşteriyi silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ad Soyad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AdSoyad)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefon)</dd>

        <dt class="col-sm-2">Firma</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Kiraci.FirmaAd)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MusteriID" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

