@model EmlakYonetim.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Düzenle";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✓ Başarılı!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>✗ Hata!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Müşteri Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger alert alert-danger"></div>
            <input type="hidden" asp-for="MusteriID" />
            <div class="form-group mb-3">
                <label asp-for="KiraciID" class="control-label">Kiracı <span class="text-danger">*</span></label>
                <select asp-for="KiraciID" class="form-control" asp-items="ViewBag.KiraciID">
                    @if (Model.KiraciID == 0)
                    {
                        <option value="" selected>-- Kiracı Seçiniz --</option>
                    }
                </select>
                <span asp-validation-for="KiraciID" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Talepler" class="control-label"></label>
                <textarea asp-for="Talepler" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Talepler" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="KayitTarihi" class="control-label"></label>
                <input asp-for="KayitTarihi" class="form-control" type="datetime-local" 
                       value="@Model.KayitTarihi.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="KayitTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

