@model EmlakYonetim.Models.Kiraci

@{
    ViewData["Title"] = "Kiracı Sil";
}

<h1>Kiracı Sil</h1>

<h3>Bu kiracıyı silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Firma Adı</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FirmaAd)</dd>

        <dt class="col-sm-2">Lisans Tipi</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.LisansTipi)</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.Aktif)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-secondary">Pasif</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="KiraciID" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

