@model IEnumerable<EmlakYonetim.Models.Kiraci>

@{
    ViewData["Title"] = "Kiracılar";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✓ Başarılı!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>✗ Hata!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kiracılar</h1>
    <a asp-action="Create" class="btn btn-primary">Yeni Kiracı Ekle</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Firma Adı</th>
            <th>Lisans Tipi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirmaAd)</td>
                <td>@Html.DisplayFor(modelItem => item.LisansTipi)</td>
                <td>
                    @if (item.Aktif)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.KiraciID" class="btn btn-sm btn-info">Detaylar</a>
                    <a asp-action="Edit" asp-route-id="@item.KiraciID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.KiraciID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
</div>

