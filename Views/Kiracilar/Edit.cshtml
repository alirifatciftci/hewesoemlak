@model EmlakYonetim.Models.Kiraci

@{
    ViewData["Title"] = "Kiracı Düzenle";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>✓ Başarılı!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>✗ Hata!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Kiracı Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger alert alert-danger"></div>
            <input type="hidden" asp-for="KiraciID" />
            <div class="form-group mb-3">
                <label asp-for="FirmaAd" class="control-label"></label>
                <input asp-for="FirmaAd" class="form-control" />
                <span asp-validation-for="FirmaAd" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LisansTipi" class="control-label"></label>
                <input asp-for="LisansTipi" class="form-control" />
                <span asp-validation-for="LisansTipi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktif" /> @Html.DisplayNameFor(model => model.Aktif)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

