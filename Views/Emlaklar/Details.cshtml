@model EmlakYonetim.Models.Emlak

@{
    ViewData["Title"] = "Emlak Detayları";
}

<h1>Emlak Detayları</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Baslik)</dd>

        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Aciklama)</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Adres)</dd>

        <dt class="col-sm-2">Şehir</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Sehir)</dd>

        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Fiyat) ₺</dd>

        <dt class="col-sm-2">Alan (m²)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AlanMetrekare)</dd>

        <dt class="col-sm-2">Oda Sayısı</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.OdaSayisi)</dd>

        <dt class="col-sm-2">Tip</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tip.TipAd)</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Durum.DurumAd)</dd>

        <dt class="col-sm-2">Danışman</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Danisman.AdSoyad)</dd>

        <dt class="col-sm-2">Yayın Tarihi</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.YayinTarihi)</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.Aktif)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-secondary">Pasif</span>
            }
        </dd>

        <dt class="col-sm-2">Randevu Sayısı</dt>
        <dd class="col-sm-10">@Model.Randevular.Count</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmlakID" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

